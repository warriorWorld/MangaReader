<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="270"
                android:centerY="0.75"
                android:endColor="@color/divide"
                android:startColor="@color/divide"></gradient>
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="@color/main_text_color_gray"
                    android:startColor="@color/main_text_color_gray"></gradient>
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="0"
                    android:centerY="0.75"
                    android:endColor="@color/manga_reader_deep"
                    android:startColor="@color/manga_reader"></gradient>
            </shape>
        </clip>
    </item>
</layer-list>