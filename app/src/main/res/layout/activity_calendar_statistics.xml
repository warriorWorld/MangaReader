<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.truthower.suhang.mangareader.widget.layout.CalendarViewLayout
        android:id="@+id/calendar_cvl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.truthower.suhang.mangareader.widget.layout.CalendarViewLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/calendar_statistics_rcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calendar_cvl"></android.support.v7.widget.RecyclerView>

    <include
        android:id="@+id/empty_view"
        layout="@layout/emptyview_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/calendar_cvl"
        android:layout_centerInParent="true"
        android:visibility="gone"></include>
</RelativeLayout>
